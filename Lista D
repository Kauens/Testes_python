def boas_vindas():
  print("Bem-vindo(a) ao mundo da programação em Python!")

boas_vindas()


def area_circulo(raio):
    pi = 3.14
    area = pi * (raio ** 2)
    return area

raio = 5
print("A área do círculo é:", area_circulo(raio))


def par_ou_impar(numero):
    if numero % 2 == 0:
        print("Par")
    else:
        print("Ímpar")

n = int(input("Digite um número: "))
par_ou_impar(n)


def contar_vogais(texto):
    vogais = 'aeiou'
    contador = 0
    for letra in texto:
        if letra in vogais:
            contador += 1
    return contador

frase = "frase com vogais"
print("Quantidade de vogais:", contar_vogais(frase))


def remover_a(texto):
    return texto.replace("a", "").replace("A", "")

entrada = "Abacaxi é amarelo"
resultado = remover_a(entrada)
print(resultado)


def media(n1, n2, n3):
    resultado = (n1 + n2 + n3)/3
    return resultado

nota = media(7, 8, 9)
print("media", nota)
